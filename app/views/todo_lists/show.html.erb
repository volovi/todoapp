<p id="notice"><%= notice %></p>
<h1>Showing Todo List</h1>
<p>
  <strong>Name:</strong>
  <%= @todo_list.name %>
</p>

<h1>Tasks</h1>
<ul class="list-group">
<% @todo_list.tasks.each do |task| %>
  <li class="list-group-item"><%= task.description %></li>
<% end %>
</ul>

<br/>

<%= link_to 'Edit', edit_todo_list_path(@todo_list) %> |
<%= link_to 'Back', todo_lists_path %>
